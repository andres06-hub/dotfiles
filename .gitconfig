# DOC - Delta: https://github.com/dandavison/delta?_x_tr_sl=auto&_x_tr_tl=en&_x_tr_hl=es-419
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    dark = true
    side-by-side = false
    # line-numbers = true
    features = hoopoe

[delta "hoopoe"]
    dark = true
    navigate = true   # use n and N to move between diff sections
    line-numbers = true
    side-by-side = true
    keep-plus-minus-markers = false
    syntax-theme = OneHalfDark
    keep-plus-minus-markers = true
    file-style = yellow 
    file-decoration-style = "#33749f" ul
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
