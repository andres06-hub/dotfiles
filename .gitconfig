    # navigate = true
    # file-added-label = [+]
    # file-copied-label = [==]
    # file-modified-label = [*]
    # file-removed-label = [-]
    # file-renamed-label = [->]
    # file-style = omit
    # zero-style = syntax
    # syntax-theme = Monokai Extended
    commit-decoration-style = green box
    commit-style = bold yellow box ul
